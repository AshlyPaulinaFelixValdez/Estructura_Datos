// busqueda lineal

using system;

class program {
    static int busquedalineal(int[] arreglo, int buscado) {
        for (int i = 0; i < arreglo.length; i++) {
            if (arreglo[i] == buscado) {
                returnn i; //posición
            }
        }
        return -1; //no encontrado
    }

    static void main() {
        int[] numeros = {10, 20, 30, 40};
        console.writeline(busquedalineal(numeros, 30)); // posición 2
    }
}